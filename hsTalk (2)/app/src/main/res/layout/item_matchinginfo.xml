<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/matchinginfo_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/matchinginfo_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/matchinginfo_name"
            android:text="날짜" />

        <TextView
            android:id="@+id/matchinginfo_serviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5dp"
            android:visibility="invisible"
            android:layout_below="@+id/matchinginfo_date"
            android:text="서비스아이디"/>


        <Button
            android:id="@+id/matchinginfo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="통화" />

    </RelativeLayout>

</LinearLayout>
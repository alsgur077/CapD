<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/matchinginfo_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="수락"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/matchinginfo_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/matchinginfo_button"
            android:text="이름"/>
        <TextView
            android:id="@+id/matchinginfo_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/matchinginfo_button"
            android:layout_below="@+id/matchinginfo_name"
            android:text="시작시간 :"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/matchinginfo_date"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/matchinginfo_start_date"
            android:layout_below="@+id/matchinginfo_name"
            android:text="내용" />


    </RelativeLayout>

</LinearLayout>